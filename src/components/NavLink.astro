---
interface Props {
    link: string,
    id: string
}

const { link, id } = Astro.props
---

<li>
    <a href={link} id={id} class="nav-link inline-block text-xl hover:scale-125 transition-all duration-150">
        <slot />
    </a>
</li>


<script>

const navLinks = document.querySelectorAll('.nav-link')

navLinks.forEach( link => {
    link.addEventListener('click', () => {
        document.body.classList.remove('mobile-nav-is-open')
    })
})

</script>