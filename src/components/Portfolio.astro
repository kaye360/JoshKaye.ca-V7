---
import Icon from "./Icon.astro";

---

<section id="portfolio">
    
    <h2 class="bg-primary-800 text-primary-200 py-8">
        <span class="block max-width mx-auto px-def">
            some of my work
            <Icon class="text-4xl">design_services</Icon>
        </span>
    </h2>

    <div class="flex flex-col gap-24 my-12">

        <slot />

    </div>
    
    
</section>



<script is:inline>

    const projects = gsap.utils.toArray('.project')

    projects.forEach ( project => {

        gsap.from(project, {
            scrollTrigger : {
                trigger : project,
                start : 'top 70%',
                end : 'top 40%',
                scrub : 2,
                toggleActions : "restart reverse none none",
            },
            opacity : 0.2,
            rotate : 5,
            scale : 0.7,
            x: 100,
            duration : 5,
            ease : 'back'
        })
    })

    
    </script>