---

interface Props {
    mode: 'dark' | 'light'
}

const { mode } = Astro.props;

let fill: '#E2E7E9' | '#333333'

switch (mode) {
    case 'dark':
        fill = '#333333'
        break
    case 'light':
        fill = '#E2E7E9'
        break
    default:
        fill = '#333333'
}
