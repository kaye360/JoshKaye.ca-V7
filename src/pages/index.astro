---
import '../main.css'
import About from "../components/About.astro";
import Analytics from "../components/Analytics.astro";
import Class from "../components/Class.astro";
import ClassList from "../components/ClassList.astro";
import Contact from "../components/Contact.astro";
import Course from "../components/Course.astro";
import CourseList from "../components/CourseList.astro";
import Education from "../components/Education.astro";
import FixedBg from "../components/FixedBg.astro"
import Footer from "../components/Footer.astro";
import Hero from "../components/Hero.astro";
import Nav from "../components/Nav.astro";
import NavLink from "../components/NavLink.astro";
import Portfolio from "../components/Portfolio.astro";
import Project from "../components/Project.astro";
import SocialLink from "../components/SocialLink.astro";
import Skills from "../components/Skills.astro";
import SkipToContent from '../components/SkipToContent.astro';
import GithubIcon from '../components/icons/GithubIcon.astro';
import InstagramIcon from '../components/icons/InstagramIcon.astro';
import LinkedinIcon from '../components/icons/LinkedinIcon.astro';
